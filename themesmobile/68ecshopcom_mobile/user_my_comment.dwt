                      <img src="themesmobile/68ecshopcom_mobile/images/stars{$value.comment.comment_rank}.png">
                    </li>
                    <li class="pj_w">{$value.comment.content}</li>
                  </ul>
                  {if $value.shaidan_status}
                    <ul>
                      <li><em>{$lang.m_107} {$value.comment.shaidan.title}</em></li>
                      <li class="pj_w">{$value.comment.shaidan.message}</li>
                    </ul>
                    <div class="sd_img">
                      <dl id="gallery">
                        {foreach from=$value.comment.shaidan_img item=shaidan_img}
                          <dd>
                            {if $shaidan_img.type == 'mobile'}
                            <a href="{$shaidan_img.image}">
                              <img src="{$shaidan_img.thumb}" width="100px" heigth="100px">
                            </a>
                            {else}
                            <a href="{$img_url}{$shaidan_img.image}">
                              <img src="{$img_url}{$shaidan_img.thumb}" width="100px" heigth="100px">
                            </a>
                            {/if}
                            
                          </dd>
                        {/foreach}
                      </dl>
                    </div>
                  {/if}
                </div>
              {/if}

              <div class="pj_zhuangtai">
                {if $value.comment_status eq 0 }
                  <a class="aqua" href="user.php?act=comment_order&rec_id={$value.rec_id}&goods_id={$value.goods_id}">{$lang.m_335}</a>
                {/if}
                {if $value.shaidan_status eq 0 }
                  <a class="gray" href="user.php?act=shaidan_send&id={$value.rec_id}">{$lang.m_338}</a>
                {/if}
              </div>
            </div>
            <!-- /if -->
          {/if}
        {/foreach}
      </div> 

      <!---------------------------------已评价----------------------------------->

      <div class="Emain" id="user_goods_ka_3" style="display:none;">
        {foreach from=$item_list item=value} 
          {if $value.comment_state gt 0}
            <div class="pingjia">
              <h2>{$lang.m_106} {$value.add_time_str}</h2>
              <dl>
                <dt><img src="{$img_url}{$value.thumb}"></dt>
                <dd><span>{$value.goods_name}</span><strong>Rp{$value.shop_price}</strong></dd>
              </dl>
              {if $value.comment}
                <div class="pj_main">
                  <ul>
                    <li>
                      <em>{$lang.m_109} </em>
                      <img src="themesmobile/68ecshopcom_mobile/images/stars{$value.comment.comment_rank}.png">
                    </li>
                    <li class="pj_w">{$value.comment.content}</li>
                  </ul>

                  {if $value.shaidan_id}
                    <ul>
                      <li><em>{$lang.m_107} {$value.comment.shaidan.title}</em></li>
                      <li class="pj_w">{$value.comment.shaidan.message}</li>
                    </ul>
                    <div class="sd_img">
                      <dl id="gallery">            
                        {foreach from=$value.comment.shaidan_img item=shaidan_img}
                          <dd>
                            {if $shaidan_img.type == 'mobile'}
                            <a href="{$shaidan_img.image}">
                              <img src="{$shaidan_img.thumb}" width="100px" heigth="100px">
                            </a>
                            {else}
                            <a href="{$img_url}{$shaidan_img.image}">
                              <img src="{$img_url}{$shaidan_img.thumb}" width="100px" heigth="100px">
                            </a>
                            {/if}
                          </dd>
                        {/foreach}
                      </dl>
                    </div>
                  {/if}

                  {if $value.comment.comment_reps}
                    {foreach from=$value.comment.comment_reps item=val}
                      <ul style="border-top:1px dashed #e5e5e5; padding-top:8px; margin-top:10px">
                        <li><em style=" color:#F60">{$lang.admin_username} {$val.user_name} {$lang.reply_comment}</em></li>
                        <li class="pj_w" style=" color:#F60; font-size:12px;">{$val.content}</li>
                      </ul>
                    {/foreach} 
                  {/if}
                </div>
              {/if}
            </div>
          {/if}
        {/foreach}
      </div>

      <!---end-->

    </div>

