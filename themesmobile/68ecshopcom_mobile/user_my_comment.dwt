<script type="text/javascript">
				/*第一种形式 第二种形式 更换显示样式*/
				function setGoodsTab(name,cursel,n){
					$('html,body').animate({'scrollTop':0},600);
				for(i=1;i<=n;i++){
				var menu=document.getElementById(name+i);
				var con=document.getElementById("user_"+name+"_"+i);
				menu.className=i==cursel?"on":"";
				con.style.display=i==cursel?"block":"none";
				}
				}
				</script>
<link href="themesmobile/68ecshopcom_mobile/css/photoswipe.css" rel="stylesheet" type="text/css">
<script src="themesmobile/68ecshopcom_mobile/js/klass.min.js"></script>
<script src="themesmobile/68ecshopcom_mobile/js/photoswipe.js"></script>
<script src="themesmobile/68ecshopcom_mobile/js/custom.js"></script>
<div class="order" style="margin-top:55px;">
      <!----------------------------------header----------------------------------->
      <div class="Evaluation">
            <ul>
            <li><a href="javascript:;" class="tab_head on" id="goods_ka1" onClick="setGoodsTab('goods_ka',1,3)">{$lang.m_103}</a></li>
              <li><a href="javascript:;" class="tab_head" id="goods_ka2" onClick="setGoodsTab('goods_ka',2,3)">{$lang.m_104}</a></li>
              <li><a href="javascript:;" class="tab_head" id="goods_ka3" onClick="setGoodsTab('goods_ka',3,3)">{$lang.m_105}</a></li>
              
            </ul>
      </div>
      <!-----------------------------------全部评价-------------------------------------->
      <div class="Emain" id="user_goods_ka_1" style="display:block;">
        {foreach from=$item_list item=value} 
          <div class="pingjia">
            <h2>{$lang.m_106} {$value.add_time_str}</h2>
            <dl>
              <dt><img src="{$img_url}{$value.thumb}"></dt>
              <dd><span>{$value.goods_name}</span><strong>Rp{$value.shop_price}</strong></dd>
            </dl>
            
            <!-- if $value.comment_status -->
            {if $value.comment}
              <div class="pj_main">
                <ul>
                  <li>
                    <em>{$lang.m_109} </em>
                    <img src="themesmobile/68ecshopcom_mobile/images/stars{$value.comment.comment_rank}.png">
                  </li>
                  <li class="pj_w">{$value.comment.content}</li>
                </ul>

                {if $value.shaidan_status}
                  <ul>
                    <li><em>{$lang.m_107} {$value.comment.shaidan.title}</em></li>
                    <li class="pj_w">{$value.comment.shaidan.message}</li>
                  </ul>
                  <div class="sd_img">
                    <dl id="gallery">
                      {foreach from=$value.comment.shaidan_img item=shaidan_img}
                        <dd>
                          {if $shaidan_img.type == 'mobile'}
                          <a href="{$shaidan_img.image}">
                            <img src="{$shaidan_img.thumb}" width="100px" heigth="100px">
                          </a>
                          {else}
                          <a href="{$img_url}{$shaidan_img.image}">
                            <img src="{$img_url}{$shaidan_img.thumb}" width="100px" heigth="100px">
                          </a>
                          {/if}
                        </dd>
                      {/foreach}
                    </dl>
                  </div>
                {else}
                  <div class="pj_zhuangtai">
                    <a class="gray" href="user.php?act=shaidan_send&id={$value.rec_id}"> {$lang.m_338} </a>
                  </div>
                {/if}

                {if $value.comment.comment_reps}
                  {foreach from=$value.comment.comment_reps item=val}
                    <ul style="border-top:1px dashed #e5e5e5; padding-top:8px; margin-top:10px">
                      <li><em style=" color:#F60">{$lang.admin_username}{$val.user_name} {$lang.reply_comment}</em></li>
                      <li class="pj_w" style=" color:#F60; font-size:12px;">{$val.content}</li>
                    </ul>
                  {/foreach} 
                {/if}
              </div>
            {else}
              <div class="pj_zhuangtai">
                {if $value.comment_status eq 0 }
                  <a class="aqua" href="user.php?act=comment_order&rec_id={$value.rec_id}&goods_id={$value.goods_id}">
                    {$lang.m_335}
                  </a>
                {/if}
                {if $value.shaidan_status eq 0 }
                  <a class="gray" href="user.php?act=shaidan_send&id={$value.rec_id}"> {$lang.m_338} </a>
                {/if}
              </div>
            {/if}
          </div>
        {/foreach}  
      </div>      

      <!---------------------------------待评价----------------------------------->

      <div class="Emain" id="user_goods_ka_2" style="display:none">
        {foreach from=$item_list item=value} 
          
          {if !$value.comment}
            <!-- if $value.shipping_time_end gt $min_time -->
            <div class="pingjia">
