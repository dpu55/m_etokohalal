<script>
 function validate_comment(){
var content = $("#content_13").val();
var error = [];
$(".jsstar input").each(function(index){
   if(this.value == '0'){
       if(this.name == 'comment_rank'){
            error.push('{$lang.m_399}');
        };
       if(this.name == 'server'){
            error.push('{$lang.m_400}');
        };
       if(this.name == 'send'){
            error.push('{$lang.m_401}');
        };
       if(this.name == 'shipping'){
            error.push('{$lang.m_402}');
        };

    }
});
 if(content == ''){
    error.push('{$lang.m_403}');
}

if(error.length>0){
alert(error);
   return false;
}else{
  return true;
}
}
</script>
